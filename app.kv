# TODO: Create your Kivy layout in the kv language here
BoxLayout:
    orientation:'horizontal'
    BoxLayout:
        orientation:'vertical'
        size_hint_x: 0.4
        Label:
            text: 'Sort by'
        Spinner:
            id: sort
            text: 'category'
            values: 'title', 'category', 'year', 'is_watched'
            on_text: app.sort(self.text)
        Label:
            text: 'Add New Movie...'
        Label:
            text: 'Title:'
        TextInput:
            text: ''
            multiline: False
            id: title
            write_tab: False
        Label:
            text: 'Category:'
        TextInput:
            text: ''
            multiline: False
            id: category
            write_tab: False
        Label:
            text: 'Year:'
        TextInput:
            text: ''
            multiline: False
            id: year
            write_tab: False
        Button:
            text: 'Add Movie'
            on_press: app.add_movie()
        Button:
            text: 'Clear'
            on_press: app.clear_text()

    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.075
            Label:
                id: watch_movie_status
                text: ''
                size_hint_y: 0.25
        BoxLayout:
            orientation: 'vertical'
            id: movie_list
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.075
            Label:
                size_hint_y: 0.25
                orientation: 'vertical'
                id: announcement
