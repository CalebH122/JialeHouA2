# TODO: Create your Kivy layout in the kv language here
BoxLayout:
    orientation:'horizontal'
    BoxLayout:
        orientation:'vertical'
        size_hint_x: 0.4
        Label:
            text: 'Sort by'
        Spinner:
            id: sort
            text: 'category'
            values: 'title', 'category', 'year', 'is_watched'
            on_text: app.sort(self.text)
        Label:
            text: 'Add New Movie...'
        Label:
            text: 'Title:'
        TextInput:
            text: ''
            multiline: False
            id: title
        Label:
            text: 'Category:'
        TextInput:
            text: ''
            multiline: False
            id: category
        Label:
            text: 'Year:'
        TextInput:
            text: ''
            multiline: False
            id: year
        Button:
            text: 'Add Movie'
        Button:
            text: 'Clear'

    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.075
            Label:
                text: ''
                size_hint_y: 0.25
        BoxLayout:
            orientation: 'vertical'
            id: movie_list
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.075
            Label:
                size_hint_y: 0.25
                orientation: 'vertical'
                text: app.status
